<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.LatesMessagesActivity">
    <android.support.v7.widget.Toolbar
            android:background="#330000FF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbarLatestMessages">
        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="match_parent">
            <TextView
                    android:layout_centerVertical="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:text="Confiados Chat"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:id="@+id/titleLatestChat"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.RecyclerView
            android:layout_width="395dp"
            android:layout_below="@+id/toolbarLatestMessages"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            android:layout_height="match_parent"
            android:id="@+id/recyclerViewLatesMessages"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"/>
</RelativeLayout>