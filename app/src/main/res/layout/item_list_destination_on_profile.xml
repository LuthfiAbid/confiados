<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:id="@+id/ll"
        android:background="#DDD"
        android:layout_height="wrap_content">
    <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
                android:src="@android:color/holo_red_dark"
                android:layout_width="40dp"
                android:id="@+id/profilePicTraveller"
                android:layout_alignParentStart="true"
                android:layout_height="40dp"/>
        <TextView
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:text="Luthfi Abid"
                android:layout_toEndOf="@+id/profilePicTraveller"
                android:id="@+id/nameProfileTraveller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:text="(Male)"
                android:layout_toEndOf="@id/nameProfileTraveller"
                android:id="@+id/genderProfileTraveller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
    <LinearLayout
            android:background="@android:color/white"
            android:orientation="vertical"
            android:layout_marginEnd="100dp"
            android:padding="10dp"
            android:layout_marginStart="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="Destination : "
                android:textColor="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/textProfileDestination"
                android:textColor="@android:color/black"
                android:text="Singapore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
            android:layout_marginHorizontal="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:textColor="@android:color/black"
                android:text="Traveling at : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:textAlignment="textEnd"
                android:id="@+id/startTravelingDateProfile"
                android:textColor="@android:color/black"
                android:text="18-8-2019"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
            android:layout_marginHorizontal="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:textColor="@android:color/black"
                android:text="Go Home at : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:textAlignment="textEnd"
                android:id="@+id/homeTravelingDateProfile"
                android:textColor="@android:color/black"
                android:text="18-9-2019"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>