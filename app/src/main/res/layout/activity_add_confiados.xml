<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:id="@+id/toolbarAddConf"
            android:background="#3f4d7a"
            app:titleTextColor="@android:color/white"
            android:layout_height="wrap_content"/>

    <LinearLayout
            android:layout_marginTop="120dp"
            android:id="@+id/linearDesti"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp"
            android:layout_below="@+id/toolbarAddConf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="18sp"
                android:layout_gravity="center_vertical"
                android:text="Your Destination"
                android:layout_width="120dp"
                android:layout_height="wrap_content"/>
        <LinearLayout
                android:background="#330000ff"
                android:inputType="text"
                android:id="@+id/linearDestiOnclick"
                android:paddingHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical|end"
                android:focusable="true"
                android:clickable="true">

            <TextView
                    android:textAllCaps="true"
                    android:id="@+id/tv_desti"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:textAlignment="textEnd"
                    android:hint="Country . . ."/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/linearUser"
            android:layout_below="@+id/linearDesti"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="18sp"
                android:layout_gravity="center_vertical"
                android:text="Name"
                android:layout_width="120dp"
                android:layout_height="wrap_content"/>
        <LinearLayout
                android:background="@drawable/shape_upload"
                android:inputType="text"
                android:paddingHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical|end"
                android:focusable="true"
                android:clickable="true">

            <TextView
                    android:id="@+id/user_on_add_confiados"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Choose Name"/>
            <ImageView
                    android:layout_marginStart="10dp"
                    android:id="@+id/add_Conf"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/plus"/>
            <de.hdodenhof.circleimageview.CircleImageView
                    android:visibility="gone"
                    android:layout_marginStart="10dp"
                    android:id="@+id/prof_conf"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/ic_person"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:layout_marginTop="20dp"
            android:id="@+id/linearConfiado"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp"
            android:layout_below="@+id/linearUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="18sp"
                android:layout_gravity="center_vertical"
                android:text="Confiados"
                android:layout_width="120dp"
                android:layout_height="wrap_content"/>
        <LinearLayout
                android:background="@drawable/shape_upload"
                android:inputType="text"
                android:paddingHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical|end"
                android:focusable="true"
                android:clickable="true">

            <EditText
                    android:background="@drawable/shape_upload"
                    android:id="@+id/et_confiados"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="18sp"
                    android:textAlignment="textEnd"
                    android:hint="Insert Confiados"/>

        </LinearLayout>
    </LinearLayout>
    <Button
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:text="ADD"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorAccentLight"
            android:layout_below="@+id/linearConfiado"
            android:id="@+id/btn_add_confiados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
</RelativeLayout>