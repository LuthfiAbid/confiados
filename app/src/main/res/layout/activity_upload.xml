<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.UploadActivity"
        android:orientation="vertical">
    <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:id="@+id/toolbarUpload"
            app:titleTextAppearance="@style/TextAppearance.AppCompat.Large"
            android:background="#3f4d7a"
            app:titleTextColor="@android:color/white"
            android:layout_height="wrap_content"/>

    <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="18sp"
                android:layout_gravity="center_vertical"
                android:text="Destination"
                android:layout_width="120dp"
                android:layout_height="wrap_content"/>
        <LinearLayout
                android:background="@drawable/shape_upload"
                android:inputType="text"
                android:paddingHorizontal="10dp"
                android:id="@+id/linearDestination"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical|end"
                android:focusable="true"
                android:clickable="true">

            <TextView
                    android:id="@+id/uploadDestination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Destination"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="18sp"
                android:layout_gravity="center_vertical"
                android:text="Traveling at"
                android:layout_width="120dp"
                android:layout_height="wrap_content"/>
        <DatePicker
                android:id="@+id/startDateUpload"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
    </LinearLayout>
    <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="18sp"
                android:layout_gravity="center_vertical"
                android:text="Go Home at"
                android:layout_width="120dp"
                android:layout_height="wrap_content"/>
        <DatePicker
                android:id="@+id/endDateUpload"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
    </LinearLayout>

    <ProgressBar
            android:progressBackgroundTint="@android:color/black"
            android:id="@+id/progressDownload"
            android:visibility="gone"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <TextView
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textAlignment="center"
            android:text="Your Traveling Ticket"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <ImageView
            android:layout_marginTop="20dp"
            tools:src="@mipmap/ic_launcher"
            android:src="@android:drawable/ic_menu_upload"
            android:id="@+id/imagePHolder"
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:layout_height="200dp"/>
    <Button
            android:background="#0f0"
            android:textColor="@android:color/white"
            android:layout_marginHorizontal="80dp"
            android:text="Upload"
            android:id="@+id/btnUploadDestination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"/>
</LinearLayout>