<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="PROFILE"
            app:titleTextColor="@android:color/white"
            android:background="#033970"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toTopOf="@+id/linearLayout"/>
<android.support.constraint.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="250dp"
        tools:context=".MainActivity">


    <LinearLayout
            android:background="#033970"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.0"
            android:id="@+id/linearLayout"
            android:orientation="horizontal">


    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/maldives"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.785"
            android:id="@+id/profilePic"/>
    <Button
            android:layout_width="87dp"
            android:layout_height="43dp"
            android:text="Confidos "
            android:background="#022d58"
            android:textColor="#ffff"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.077"
            app:layout_constraintVertical_bias="0.797"/>

    <Button
            android:id="@+id/btn_logout"
            android:layout_width="87dp"
            android:layout_height="43dp"
            android:text="LOGOUT"
            android:textSize="12sp"
            android:textColor="#ffff"
            android:background="#ff4e4e"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.95"
            app:layout_constraintVertical_bias="0.797"/>

</android.support.constraint.ConstraintLayout>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Luthfi Abid"
            android:textColor="#000000"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            android:id="@+id/profileName"/>
    <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="082156575523"
            android:textAlignment="center"
            android:textSize="22sp"
            android:textColor="#000000"
            android:id="@+id/noTelepon"/>
    <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Male"
            android:textColor="#000000"
            android:textAlignment="center"
            android:textSize="22sp"
            android:id="@+id/profileGender"/>
    <LinearLayout
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status :"
                android:textColor="#000000"
                android:textSize="25sp"/>
        <TextView
                android:layout_marginStart="30dp"
                android:textSize="25sp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="On Trip"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/recyclerViewProfileDestination"
            android:layout_height="match_parent"/>

</LinearLayout>